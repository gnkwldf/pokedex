                    <th>{{ 'pokedex.about.role'|trans|capitalize }}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Gnuk</td>
                    <td>{{ 'pokedex.about.role.development'|trans|capitalize }}, {{ 'pokedex.about.role.design'|trans|capitalize }}</td>
                </tr>
                <tr>
                    <td>LDF</td>
                    <td>{{ 'pokedex.about.role.drawings'|trans|capitalize }}</td>
                </tr>
                <tr>
                    <td>Neozetare</td>
                    <td>{{ 'pokedex.about.role.integration'|trans|capitalize }}, {{ 'pokedex.about.role.significantHelp'|trans|capitalize }}</td>
                </tr>
                <tr>
                    <td>Sika</td>
                    <td>{{ 'pokedex.about.role.translation'|trans|capitalize }}, {{ 'pokedex.about.role.significantHelp'|trans|capitalize }}</td>
                </tr>
                <tr>
                    <td>Gear 3</td>
                    <td>{{ 'pokedex.about.role.significantHelp'|trans|capitalize }}</td>
                </tr>
                <tr>
                    <td>Killerdream38</td>
                    <td>{{ 'pokedex.about.role.significantHelp'|trans|capitalize }}</td>
                </tr>
                <tr>
                    <td>Boidin</td>
                    <td>{{ 'pokedex.about.role.significantHelp'|trans|capitalize }}</td>
                </tr>
