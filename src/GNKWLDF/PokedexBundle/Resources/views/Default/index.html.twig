{% extends "GNKWLDFPokedexBundle::layout.html.twig" %}

{% block stylesheets %}
<link href="{{ asset('bundles/gnkwldfpokedex/css/sprites.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/gnkwldfpokedex/js/index.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
<div class="container">
    <header>
        <h1 class="hide">Pokédex</h1>
        <div class="pokedex-top pokedex-hf">
            <div class="pokedex-row">
                <div class="pokedex-corner-left">
                </div>
                <div class="pokedex-left">
                </div>
                <div class="pokedex-center">
                </div>
                <div class="pokedex-right">
                </div>
                <div class="pokedex-corner-right">
                </div>
            </div>
        </div>
    </header>
    <article>
        <div class="pokedex-screen row">
            <section>
                <h2 class="hide">{% trans %}pokedex.title.about{% endtrans %}</h2>
                <div id="pokeview" class="pokedex-view col-xs-12 col-sm-6">
                {{ render(controller('GNKWLDFPokedexBundle:Default:description', { 'number': number })) }}
                </div>
            </section>
            <section>
                <div class="pokedex-choice col-xs-12 col-sm-6">
                    <h2 class="hide">{% trans %}pokedex.title.select{% endtrans %}</h2>
                    <p class="row">
                    {% for i in 0..pokemonNumber %}
                        {% if i > 0 %}
                        <span class="hide">&nbsp;| </span>
                        {% endif %}
                        <span class="pokedex-area col-sm-4 col-md-2 col-xs-3"><a class="pokedex-action" href="{{ path('pokedex_index', { 'number': i }) }}" data-pokemon-number="{{ i }}" title="{{('pokemon.list.' ~ i ~ '.name')|trans}}"><span class="col-xs-12 pokedex-element"><span class="pokesprite pokesprite-{{i}}"></span><span class="pokedex-number">{{ i }}</span></span></a></span>
                        {% if ((i+1) % 12) == 0 %}
                        <span class="clearfix visible-md clearfix visible-sm clearfix visible-xs"></span>
                        {% elseif ((i+1) % 6) == 0 %}
                        <span class="clearfix visible-md"></span>
                        {% elseif ((i+1) % 3) == 0 %}
                        <span class="clearfix visible-sm"></span>
                        {% elseif ((i+1) % 4) == 0 %}
                        <span class="clearfix visible-xs"></span>
                        {% endif %}
                    {% endfor %}
                    </p>
                </div>
            </section>
        </div>
    </article>
    <footer>
        <div class="pokedex-bottom pokedex-hf">
            <div class="pokedex-row">
                <div class="pokedex-corner-left">
                </div>
                <div class="pokedex-left">
                </div>
                <div class="pokedex-center">
                </div>
                <div class="pokedex-right">
                </div>
                <div class="pokedex-corner-right">
                </div>
            </div>
        </div>
        <p>Code and design by Gnuk, drawings by LDF, content by Neozetare, Sika and BCDesign67 © <a href="http://www.gnkw.org" title="Gnuk's Network Kernel for Web">GNKW</a> &amp; <a href="http://ldfcorp.fr" title="Le Dessinateur Fou">LDF</a> 2014 - Sources on MIT License <a href="https://github.com/gnkwldf/pokedex"><em class="label label-primary">Fork me on github</em></a></p>
    </footer>
</div>
{% endblock %}